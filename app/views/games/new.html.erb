<h1>New game</h1>

<div class="letters">
  <% @letters.each do |letter| %>
  <div class="letter">
    <h2><%= letter %></h2>
  </div>
  <% end %>
</div>

<p>What is the longest word you can find?</p>

<form action="/score" method="post" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="attempt" class="form-control">
  <input type="hidden" name="original" value="<%= @letters.join() %>">
  <input type="submit" value="Play!" class="btn btn-primary">
</form>

